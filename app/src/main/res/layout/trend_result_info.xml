<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrendResultInfo"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="뒤로가기">
        </Button-->

        <TextView
            android:id="@+id/mypage_myInfo_Text"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="bottom|center_horizontal"
            android:text="내 매장 트렌드 분석 점수"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>
    </RelativeLayout>
    <TextView
        android:layout_width="230dp"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edge_bottom_lightgrey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="60dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총점"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"
            android:textSize="18dp">
        </TextView>

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/edge_butter_white"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textSize="60dp">
        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:text="1. 내 매장의 성공률">
        </TextView>
        <ProgressBar
            android:id="@+id/r1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="40"
            android:progress="0"
            android:progressTint="@color/brown">
        </ProgressBar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="2. 내 매장의 매출 변화율">
        </TextView>
        <ProgressBar
            android:id="@+id/r2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="14dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="20"
            android:progress="0"
            android:progressTint="@color/brown">
        </ProgressBar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="3. SNS 사용률">
        </TextView>
        <ProgressBar
            android:id="@+id/r3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="14dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="20"
            android:progress="0"
            android:progressTint="@color/brown">
        </ProgressBar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:text="4. 고객 만족도">
        </TextView>
        <ProgressBar
            android:id="@+id/r4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:textSize="14dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="20"
            android:progress="0"
            android:progressTint="@color/brown">
        </ProgressBar>

    </LinearLayout>


</LinearLayout>