<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SmallBusiness">
    <TextView
        android:id="@+id/supportText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:background="@drawable/edge_bottom_lightgrey"
        android:text="교육/지원"
        android:textSize="25dp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        android:text="소상공인진흥공단(www.semas.or.kr)에서는 소상공인을 위해 각종 교육 및 자금을 지원합니다. 클릭하면 해당 사이트로 이동합니다.">
    </TextView>
    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edge_bottom_lightgrey"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/first"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="소상공인 정책자금 사이트"
            android:background="@drawable/join_button"
            android:layout_marginBottom="30dp">
        </Button>

        <Button
            android:id="@+id/second"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="소상공인 특화자금 안내"
            android:background="@drawable/join_button"
            android:layout_marginBottom="30dp">
        </Button>

        <Button
            android:id="@+id/third"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="사회적 경제기업 전용자금 안내"
            android:background="@drawable/join_button"
            android:layout_marginBottom="30dp">
        </Button>

        <Button
            android:id="@+id/fourth"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="성장촉진자금 안내"
            android:background="@drawable/join_button"
            android:layout_marginBottom="30dp">
        </Button>

        <Button
            android:id="@+id/fifth"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="재도전 특별자금"
            android:background="@drawable/join_button"
            android:layout_marginBottom="30dp">
        </Button>

        <Button
            android:id="@+id/sixth"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="혁신형 소상공인 자금"
            android:background="@drawable/join_button"
            android:layout_marginBottom="30dp">
        </Button>

        <Button
            android:id="@+id/seventh"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="도시정비 사업구역 자금"
            android:background="@drawable/join_button"
            android:layout_marginBottom="30dp">
        </Button>

        <Button
            android:id="@+id/eighth"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="신사업사관학교 연계자금"
            android:background="@drawable/join_button"
            android:layout_marginBottom="20dp">
        </Button>

        <Button
            android:id="@+id/ninth"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="스마트설비 도입 자금"
            android:background="@drawable/join_button"
            android:layout_marginBottom="20dp">
        </Button>

    </LinearLayout>

</LinearLayout>