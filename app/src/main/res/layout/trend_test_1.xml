<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrendTest1Activity"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edge_bottom_lightgrey"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:paddingHorizontal="5dp"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:text="Trend Analysis Test"
        android:textSize="20dp">
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="170dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="1. 개업 날짜를 입력하세요. (년/월/일)"
            android:textColor="@color/black"
            android:textSize="18dp">
        </TextView>

        <EditText
            android:id="@+id/edit_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="15"
            android:textSize="15dp"
            android:hint="년도" />

        <EditText
            android:id="@+id/edit_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ems="15"
            android:textSize="15dp"
            android:hint="월" />

        <EditText
            android:id="@+id/edit_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:ems="15"
            android:textSize="15dp"
            android:hint="일" />

        <Button
            android:id="@+id/next_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="12dp"
            android:backgroundTint="@color/butter">
        </Button>

    </LinearLayout>
</LinearLayout>